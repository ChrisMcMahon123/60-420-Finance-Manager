<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.mcmah113.mcmah113expensesiq.OverviewCustomizeDialogFragment">

    <Switch
        android:id="@+id/switchAccounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@string/accounts_overview_customize"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:theme="@style/SwitchTheme"/>

    <Switch
        android:id="@+id/switchTransactions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@string/recent_transactions_customize"
        android:textSize="18sp"
        android:theme="@style/SwitchTheme"/>

    <Switch
        android:id="@+id/switchReports1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@string/expense_by_category_customize"
        android:textSize="18sp"
        android:theme="@style/SwitchTheme"/>

    <Switch
        android:id="@+id/switchReports2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@string/income_vs_expense_customize"
        android:textSize="18sp"
        android:theme="@style/SwitchTheme"/>
</LinearLayout>